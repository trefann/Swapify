{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile in the SkillSwap application.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user profile (matches Firebase Auth UID)." },
        "email": { "type": "string", "description": "User's email address.", "format": "email" },
        "displayName": { "type": "string", "description": "User's display name." },
        "profilePicture": { "type": "string", "description": "URL of the user's profile picture.", "format": "uri" },
        "bio": { "type": "string", "description": "User's biographical information." },
        "availability": { "type": "array", "description": "User's availability hours.", "items": { "type": "string" } },
        "credits": { "type": "number", "description": "Number of credits the user has." },
        "skillsOffered": {
          "type": "array",
          "description": "List of skills offered.",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" }
            },
            "required": ["id", "name"]
          }
        },
        "skillsWanted": {
          "type": "array",
          "description": "List of skills wanted.",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" }
            },
            "required": ["id", "name"]
          }
        },
        "rating": { "type": "number", "description": "Average user rating from feedback."}
      },
      "required": ["id", "email", "displayName", "credits"]
    },
    "Skill": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Skill",
      "type": "object",
      "description": "Represents a skill that can be taught or learned.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the skill." },
        "userId": { "type": "string", "description": "Reference to UserProfile who offers the skill." },
        "name": { "type": "string", "description": "Name of the skill." },
        "description": { "type": "string", "description": "Description of the skill." },
        "category": { "type": "string", "description": "Category of the skill." },
        "imageUrl": { "type": "string", "format": "uri" },
        "imageHint": { "type": "string" }
      },
      "required": ["id", "userId", "name", "description"]
    },
    "SwapRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SwapRequest",
      "type": "object",
      "description": "Represents a request to swap skills between two users.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the swap request." },
        "requesterId": { "type": "string", "description": "Reference to UserProfile who initiated the request." },
        "receiverId": { "type": "string", "description": "Reference to UserProfile who is receiving the request." },
        "skillId": { "type": "string", "description": "Reference to Skill being requested." },
        "status": { "type": "string", "enum": ["pending", "accepted", "declined", "completed", "cancelled"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "requesterId", "receiverId", "skillId", "status", "createdAt", "updatedAt"]
    },
    "ChatMessage": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ChatMessage",
      "type": "object",
      "description": "Represents a chat message exchanged between users in a swap request.",
      "properties": {
        "id": { "type": "string" },
        "swapRequestId": { "type": "string" },
        "senderId": { "type": "string" },
        "message": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "swapRequestId", "senderId", "message", "timestamp"]
    },
    "ScheduledSession": {
       "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ScheduledSession",
      "type": "object",
      "description": "Represents a scheduled skill swap session between users.",
       "properties": {
        "id": { "type": "string" },
        "swapRequestId": { "type": "string" },
        "title": { "type": "string" },
        "participants": { "type": "array", "items": {"type": "string"} },
        "startTime": { "type": "string", "format": "date-time" },
        "endTime": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "swapRequestId", "title", "participants", "startTime", "endTime"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profiles. Uses path-based ownership for private user data."
    },
    "/users/{userId}/scheduled_sessions/{sessionId}": {
      "schema": { "$ref": "#/entities/ScheduledSession" },
      "description": "Stores a reference to a scheduled session for a specific user, allowing for secure and efficient queries."
    },
    "/skills/{skillId}": {
      "schema": { "$ref": "#/entities/Skill" },
      "description": "Stores skills available in the SkillSwap application."
    },
    "/swap_requests/{swapRequestId}": {
      "schema": { "$ref": "#/entities/SwapRequest" },
      "description": "Stores swap requests between users. Includes 'requesterId' and 'receiverId' for identifying participants."
    },
    "/swap_requests/{swapRequestId}/chat_messages/{chatMessageId}": {
      "schema": { "$ref": "#/entities/ChatMessage" },
      "description": "Stores chat messages for each swap request. Uses a subcollection to associate messages with their respective swap request."
    },
     "/scheduled_sessions/{sessionId}": {
      "schema": { "$ref": "#/entities/ScheduledSession" },
      "description": "Stores the canonical scheduled skill swap sessions. This is the source of truth for a session."
    }
  }
}
